rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Content documents (hero, contact, etc.) - public read, auth write
    match /content/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Services collection - public read, auth write
    match /services/{service} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // FAQs collection - public read, auth write
    match /faqs/{faq} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Testimonials collection - public read, auth write
    match /testimonials/{testimonial} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
